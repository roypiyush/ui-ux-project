<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Express App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="http://localhost:8080/css/bootstrap.min.css" />
    <script src="http://localhost:8080/js/bootstrap.min.js"></script>
    <style>
        .form-group {
            display: inline-block;
            border-radius: 2px;
            border: 1px solid gray;
            padding: 10px 15px;
        }
        .form-row {
            display: table-row;
        }
        .form-row > label {
            font-family: 'Franklin Gothic Medium', "Arial Black", Gadget, sans-serif;
            display: table-cell;
            padding: 5px 25px 10px 0px;
        }
        .form-row > input {
            display: table-cell;
            border-radius: 2px;
            border: 1px solid gray;
        }
        .form-group > button {
            display: block;
            width: 100px;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h1>Add Customer</h1>
    <% if(errors != undefined) { %>
        <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
        <% }) %>
    <% } %>
    <form method="POST" action="/user/add" class="form-group">
        <div class="form-row">
            <label>First name</label>
            <input type="text" name="fname" />
        </div>
        <div class="form-row">
            <label>Last name</label>
            <input type="text" name="lname" />
        </div>
        <div class="form-row">
            <label>Email</label>
            <input type="text" name="email" />
        </div>
        <button type="submit" class="btn btn-default">Submit</button>
    </form>
    <ul>
        <% users.forEach(function(user){ %>
            <li>
                <%= user.fname %> <%= user.lname %> <%= user.email %>
            </li>
        <% }) %>
    </ul>
</body>
</html>