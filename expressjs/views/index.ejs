<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Express App</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Ubuntu">
    <link rel="stylesheet" type="text/css" media="screen" href="http://localhost:8080/css/bootstrap.min.css" />
    <style>
        body {
            font-family: Ubuntu;
            background-color: #F0EDE5;
        }
        .form-group {
            display: inline-block;
            padding: 10px 15px;
            border: 1px solid rgb(14, 111, 202);
            background-color: whitesmoke;
            border-radius: 5px;
        }
        .form-row {
            /* display: table-row; */
            height: 30px;
            margin: 10px 0px;
        }
        .form-row > label {
            font-family: 'Franklin Gothic Medium', "Arial Black", Gadget, sans-serif;
            min-width: 100px;
            max-width: 500px;
            color: rgb(48, 114, 168);
            /* display: table-cell; */
            padding: 5px 25px 10px 0px;

        }
        .form-row > input {
            /* display: table-cell; */
            border-radius: 4px;
            border: 1px solid rgb(107, 162, 206);
        }
        .form-row > select {
            /* width: 100%; */
            text-align: center;
            /* display: table-cell; */
            border-radius: 4px;
            border: 1px solid rgb(107, 162, 206);
        }
        .form-group-button {
            width: 50%;
            margin: 0 auto;
        }
    </style>
</head>
<body>
    <h1>Add Customer</h1>
    <% if(errors != undefined) { %>
        <% errors.forEach(function(error){ %>
            <li><%= error.msg %></li>
        <% }) %>
    <% } %>
    <form method="POST" action="/user/add" class="form-group">
        <div class="form-row">
            <label>First name</label>
            <input type="text" name="fname" />
        </div>
        <div class="form-row">
            <label>Last name</label>
            <input type="text" name="lname" />
        </div>
        <div class="form-row">
            <label>Email</label>
            <input type="text" name="email" />
        </div>
        <div class="form-row">
            <label>Age</label>
            <input type="number" name="age" />
        </div>
        <div class="form-row">
            <label>Gender</label>
            <select>
                <option value="">Select</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
            </select>
        </div>
        <div class="form-group-button">
            <button id="submit" type="submit" class="btn btn-primary">Submit</button>
            <button id="cancel" type="submit" class="btn btn-primary">Cancel</button>
        </div>
    </form>
    <ul>
        <% users.forEach(function(user){ %>
            <li>
                <%= user.fname %> <%= user.lname %> <%= user.email %>
            </li>
        <% }) %>
    </ul>
</body>
</html>